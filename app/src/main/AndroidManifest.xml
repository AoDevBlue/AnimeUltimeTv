<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="blue.aodev.animeultimetv">

    <uses-feature
        android:name="android.software.leanback"
        android:required="true" />

    <uses-feature
        android:name="android.hardware.touchscreen"
        android:required="false" />

    <uses-feature
        android:name="android.hardware.microphone"
        android:required="false"/>

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:allowBackup="true"
        android:name=".presentation.application.MyApplication"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.Leanback"
        android:banner="@drawable/banner"
        tools:ignore="UnusedAttribute">

        <activity
            android:name=".presentation.launch.LaunchActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LEANBACK_LAUNCHER"/>
            </intent-filter>

        </activity>

        <activity
            android:name=".presentation.main.MainActivity"
            android:theme="@style/AppTheme"/>

        <activity
            android:name=".presentation.search.SearchActivity"
            android:theme="@style/AppTheme"/>

        <activity
            android:name=".presentation.animedetails.AnimeDetailsActivity"/>

        <activity
            android:name=".presentation.playback.PlaybackActivity"/>

        <activity
            android:name=".presentation.episodes.EpisodesActivity"/>

    </application>

</manifest>
